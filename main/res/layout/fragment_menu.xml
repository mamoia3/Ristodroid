<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="false"
    android:background="@drawable/androidino"
    tools:context="clientUi.FragmentMenu">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/cardview_light_background"
        app:tabGravity="fill"
        app:tabIndicatorColor="#717278"
        app:tabMode="fixed"
        app:tabTextColor="#95000000"
        tools:ignore="MissingConstraints,PrivateResource">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_primipiatti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/primi_piatti"
            app:tint="#7125A0D1" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_secondipiatti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/secondi_piatti" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_terzipiatti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terzi_piatti" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_dessert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dessert" />
    </com.google.android.material.tabs.TabLayout>

    <Button
        android:id="@+id/btn_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="592dp"
        android:text="@string/invia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_general" />

</androidx.constraintlayout.widget.ConstraintLayout>
